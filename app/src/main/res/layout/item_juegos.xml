<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/juego_item_imagen"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#757575"
        android:scaleType="centerCrop"
        android:src="@drawable/hollowknight" />

    <TextView
        android:id="@+id/juego_item_nombre"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/juego_item_imagen"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"

        android:layout_toRightOf="@+id/juego_item_imagen"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Ori and the Blind Forest" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/juego_item_puntuacion"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/juego_item_nombre"
        android:layout_below="@+id/juego_item_nombre"
        android:layout_marginBottom="4dp" />



    <TextView
        android:id="@+id/juego_item_desarrolladora"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/juego_item_nombre"
        android:layout_below="@+id/juego_item_puntuacion"
        android:textColor="@color/greySecondary"
        tools:text="Desarrolladora"/>

    <TextView
        android:id="@+id/juego_item_separador"
        style="@style/AppTheme.TextDivider"
        android:layout_alignTop="@+id/juego_item_desarrolladora"
        android:layout_toRightOf="@+id/juego_item_desarrolladora"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/juego_item_lanzamiento"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/juego_item_desarrolladora"
        android:layout_toRightOf="@+id/juego_item_separador"
        android:textColor="@color/greySecondary"
        tools:text="Dia de Lanzamiento"/>



</RelativeLayout>
